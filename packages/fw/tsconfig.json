{
  "extends": "@fondduo/tsconfig",
  "compilerOptions": {
    "outDir": "lib/dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib/types",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "gen/*": ["src/generator/*"],
      "watchers/*": ["src/watchers/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "build/**/*",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
